<?xml version="1.0" encoding="utf-8"?>
<!--
    翰墨精英 (Elite Business) - 华为GT系列商务表盘
    分辨率: 454x454 (HWHD02)
    设计: 罗马数字 + 金色点缀 + 白色表底 + 商务数据面板
-->
<WatchFace dpi="454">

    <!-- ==================== 层1: 表盘背景 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="background" type="static"
            x="0" y="0" w="454" h="454"
            res_id="background/bg_main.png" />
    </Widget>

    <!-- ==================== 层2: 刻度环 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="tick_marks" type="static"
            x="0" y="0" w="454" h="454"
            res_id="background/tick_ring.png" />
    </Widget>

    <!-- ==================== 层3: 罗马数字时标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="roman_numerals" type="static"
            x="0" y="0" w="454" h="454"
            res_id="background/roman_numerals.png" />
    </Widget>

    <!-- ==================== 层4: 内圈装饰线 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="inner_ring" type="static"
            x="0" y="0" w="454" h="454"
            res_id="background/inner_ring.png" />
    </Widget>

    <!-- ==================== 层5: 天气图标 (选图控件) ==================== -->
    <Widget widget_type="SELECTIMAGE">
        <SelectImage label="weather_icon" type="dynamic"
            data_type="DATA_WEATHER"
            x="165" y="118" w="40" h="40"
            res_dir="weather/" />
    </Widget>

    <!-- ==================== 层6: 温度显示 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="temperature" type="dynamic"
            data_type="DATA_TEMPERATURE"
            x="208" y="120" w="90" h="36"
            font_size="28" font_color="#1A1A2E"
            align="left" />
    </Widget>

    <!-- ==================== 层7: 天气描述文本 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="weather_text" type="dynamic"
            data_type="DATA_WEATHER_TEXT"
            x="165" y="158" w="130" h="24"
            font_size="18" font_color="#666666"
            align="center" />
    </Widget>

    <!-- ==================== 层8: 日期区域背景框 (左) ==================== -->
    <Widget widget_type="BOX">
        <Box label="date_bg_left" type="static"
            x="80" y="200" w="120" h="54"
            bg_color="#F5F0E8" border_color="#C9A96E"
            border_width="1" corner_radius="6" />
    </Widget>

    <!-- ==================== 层9: 星期显示 ==================== -->
    <Widget widget_type="SELECTIMAGE">
        <SelectImage label="weekday" type="dynamic"
            data_type="DATA_WEEK"
            x="85" y="203" w="50" h="22"
            res_dir="icons/week/" />
    </Widget>

    <!-- ==================== 层10: 月/日 日期显示 ==================== -->
    <Widget widget_type="TEXTAREAWITHTWOWILDCARD">
        <TextAreaWithTwoWildcard label="date_display" type="dynamic"
            data_type_1="DATA_MONTH" data_type_2="DATA_DAY"
            connector="CONN_DASH"
            x="85" y="228" w="110" h="24"
            font_size="20" font_color="#1A1A2E"
            align="center" />
    </Widget>

    <!-- ==================== 层11: 日期区域背景框 (右) ==================== -->
    <Widget widget_type="BOX">
        <Box label="date_bg_right" type="static"
            x="254" y="200" w="120" h="54"
            bg_color="#F5F0E8" border_color="#C9A96E"
            border_width="1" corner_radius="6" />
    </Widget>

    <!-- ==================== 层12: 农历日期 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="lunar_date" type="dynamic"
            data_type="DATA_LUNAR"
            x="259" y="203" w="110" h="22"
            font_size="18" font_color="#C9A96E"
            align="center" />
    </Widget>

    <!-- ==================== 层13: 时辰显示 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="chinese_hour" type="dynamic"
            data_type="DATA_CHINESE_HOUR"
            x="259" y="228" w="110" h="24"
            font_size="18" font_color="#666666"
            align="center" />
    </Widget>

    <!-- ==================== 层14: 数字时间显示 ==================== -->
    <Widget widget_type="TEXTAREAWITHTWOWILDCARD">
        <TextAreaWithTwoWildcard label="digital_time" type="dynamic"
            data_type_1="DATA_HOUR" data_type_2="DATA_MIN"
            connector="CONN_COLON"
            x="167" y="290" w="120" h="40"
            font_size="36" font_color="#1A1A2E"
            align="center" />
    </Widget>

    <!-- ==================== 层15: 步数图标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="step_icon" type="static"
            x="105" y="340" w="20" h="20"
            res_id="icons/ic_steps.png" />
    </Widget>

    <!-- ==================== 层16: 步数数值 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="step_count" type="dynamic"
            data_type="DATA_STEP"
            x="128" y="340" w="70" h="20"
            font_size="16" font_color="#1A1A2E"
            align="left" />
    </Widget>

    <!-- ==================== 层17: 分隔符 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="separator_1" type="static"
            x="202" y="342" w="2" h="16"
            res_id="icons/separator.png" />
    </Widget>

    <!-- ==================== 层18: 卡路里图标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="calorie_icon" type="static"
            x="212" y="340" w="20" h="20"
            res_id="icons/ic_calories.png" />
    </Widget>

    <!-- ==================== 层19: 卡路里数值 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="calorie_count" type="dynamic"
            data_type="DATA_CALORIE"
            x="235" y="340" w="60" h="20"
            font_size="16" font_color="#1A1A2E"
            align="left" />
    </Widget>

    <!-- ==================== 层20: 分隔符2 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="separator_2" type="static"
            x="299" y="342" w="2" h="16"
            res_id="icons/separator.png" />
    </Widget>

    <!-- ==================== 层21: 距离图标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="distance_icon" type="static"
            x="309" y="340" w="20" h="20"
            res_id="icons/ic_distance.png" />
    </Widget>

    <!-- ==================== 层22: 距离数值 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="distance_value" type="dynamic"
            data_type="DATA_DISTANCE"
            x="332" y="340" w="60" h="20"
            font_size="16" font_color="#1A1A2E"
            align="left" />
    </Widget>

    <!-- ==================== 层23: 心率图标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="heart_icon" type="static"
            x="160" y="370" w="18" h="18"
            res_id="icons/ic_heart.png" />
    </Widget>

    <!-- ==================== 层24: 心率数值 ==================== -->
    <Widget widget_type="TEXTAREAWITHONEWILDCARD">
        <TextAreaWithOneWildcard label="heart_rate" type="dynamic"
            data_type="DATA_HEART_RATE"
            x="182" y="370" w="50" h="18"
            font_size="16" font_color="#D4374A"
            align="left" />
    </Widget>

    <!-- ==================== 层25: 电池图标 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="battery_icon" type="static"
            x="244" y="370" w="18" h="18"
            res_id="icons/ic_battery.png" />
    </Widget>

    <!-- ==================== 层26: 电池百分比 ==================== -->
    <Widget widget_type="TEXTAREAWITHTWOWILDCARD">
        <TextAreaWithTwoWildcard label="battery_level" type="dynamic"
            data_type_1="DATA_BATTERY" data_type_2="DATA_NULL"
            connector="CONN_PERCENT"
            x="265" y="370" w="50" h="18"
            font_size="16" font_color="#4A9B5A"
            align="left" />
    </Widget>

    <!-- ==================== 层27: 步数进度弧 ==================== -->
    <Widget widget_type="CIRCLE">
        <Circle label="step_progress" type="dynamic"
            data_type="DATA_STEP_PROGRESS"
            cx="227" cy="227" radius="210"
            start_angle="225" end_angle="315"
            stroke_width="3" stroke_color="#C9A96E"
            bg_stroke_color="#E8E0D0" />
    </Widget>

    <!-- ==================== 层28: 时针 ==================== -->
    <Widget widget_type="TEXTUREMAPPER">
        <TextureMapper label="hour_hand" type="dynamic"
            data_type="DATA_HOUR_PRICKER"
            center_x="227" center_y="227"
            pivot_x="14" pivot_y="115"
            start_angle="0" end_angle="360"
            res_id="hands/hour_hand.png" />
    </Widget>

    <!-- ==================== 层29: 分针 ==================== -->
    <Widget widget_type="TEXTUREMAPPER">
        <TextureMapper label="minute_hand" type="dynamic"
            data_type="DATA_MIN_PRICKER"
            center_x="227" center_y="227"
            pivot_x="10" pivot_y="150"
            start_angle="0" end_angle="360"
            res_id="hands/minute_hand.png" />
    </Widget>

    <!-- ==================== 层30: 秒针 ==================== -->
    <Widget widget_type="TEXTUREMAPPER">
        <TextureMapper label="second_hand" type="dynamic"
            data_type="DATA_SEC_PRICKER"
            center_x="227" center_y="227"
            pivot_x="4" pivot_y="170"
            start_angle="0" end_angle="360"
            res_id="hands/second_hand.png" />
    </Widget>

    <!-- ==================== 层31: 表冠中心装饰 ==================== -->
    <Widget widget_type="IMAGE">
        <Image label="center_cap" type="static"
            x="215" y="215" w="24" h="24"
            res_id="background/center_cap.png" />
    </Widget>

</WatchFace>
